<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All students</title>
    <link rel="stylesheet" href="/css/home.css">
    <style>
        th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <div class="block">
        <div class="top">
            <div id="logo"><img src="/images/image.png" alt="Vasavi College of Engineering" width="110"></div>
            <div id="clg">Vasavi College Of Engineering</div>
        </div>
        <%- include('partials/navbar') %>
        <h1 style="text-align: center;font-size: 50px;">All Students Details</h1>
        
        <form action="/allstudents" method="get">
            <div style="text-align: center; margin-bottom: 20px;">
                <input type="text" name="search" placeholder="Search by branch or student id" style="width: 300px; padding: 10px;">
                <input type="submit" value="Search" style="padding: 10px;">
                
            </div>
        </form>

        <table style="width: 100%;" border="3" bordercolor="black" cellspacing="2" cellpadding="10">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Branch</th>
                <th>10th marks</th>
                <th>Inter marks</th>
                <th>CGPA</th>
                <th>Achievements</th>
                <th>Projects</th>
                <th>Interests</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>

            <% for (var student of students) { %>
                <tr>
                    <td><%= student.s_id %></td>
                    <td><%= student.s_name %></td>
                    <td><%= student.s_branch %></td>
                    <td><%= student.s_10thmarks %></td>
                    <td><%= student.s_intermarks %></td>
                    <td><%= student.s_cgpa %></td>
                    <td><%= student.s_achievements %></td>
                    <td><%= student.s_projects %></td>
                    <td><%= student.s_interests %></td>
                    <td><a href="/edit/<%= student._id %>">Edit</a></td>
                    <td><a href="/delete/<%= student._id %>" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a></td>
                </tr>
            <% } %>
        </table>
        
        
    </div>
</body>
</html>